public class starpyranum {

	public static void main(String[] args) {
		for(int row=1;row<=9;row++)
		{
			for(int space=1;space<row;space++)
			{
				System.out.print(" ");
			}
			for(int col=9;col>=row;col--)
			{
				System.out.print("* ");
			}
			System.out.println();
		}
		
	}

}


output:
* * * * * * * * * 
 * * * * * * * * 
  * * * * * * * 
   * * * * * * 
    * * * * * 
     * * * * 
      * * * 
       * * 
        * 
