public class invnum {

	public static void main(String[] args) {
		for(int row=9;row>=1;row--)
		{
			for(int space=row;space>0;space--)
			{
				System.out.print(" ");
			}
			for(int col=row;col<=9;col++)
			{
				System.out.print(col);
			}
			for(int col1=8;col1>=row;col1--)
			{
				System.out.print(col1);
			}
			System.out.println();
		}
	}
	}
  
  output:
   9
        898
       78987
      6789876
     567898765
    45678987654
   3456789876543
  234567898765432
 12345678987654321
