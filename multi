#include <stdio.h>
int main()
{
int i,n,m;
printf("Enter the number:");
scanf("%d",&n);
for(i=0;i<=n;i++)
{
    m=n*i;
    printf("%d*%d=%d",n,i,m);
    printf("\n");
}

for(i=0;i<=n;i++)
{
    m=n-i;
    printf("%d-%d=%d",n,i,m);
    printf("\n");
}
return 0;
}

output:

Enter the number:6
6*0=0
6*1=6
6*2=12
6*3=18
6*4=24
6*5=30
6*6=36
6-0=6
6-1=5
6-2=4
6-3=3
6-4=2
6-5=1
6-6=0
