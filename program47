public class pyramid123 {

	public static void main(String[] args) {
		for(int row=1;row<=9;row++)
		{
			for(int space=8;space>=row;space--)
			{
				System.out.print(" ");
			}
			for(int col=1;col<=row;col++)
			{
				System.out.print(col);
			}
			for(int col1=row-1;col1>=1;col1--)
			{
				System.out.print(col1);
			}
			System.out.println();
		}
	

	}

}


output:

 1
       121
      12321
     1234321
    123454321
   12345654321
  1234567654321
 123456787654321
12345678987654321
